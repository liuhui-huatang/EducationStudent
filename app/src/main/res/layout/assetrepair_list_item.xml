<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_130"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/assetmaintenance_photo_img"
            android:layout_width="@dimen/common_150"
            android:layout_height="match_parent"
            android:background="@mipmap/bottombg_show_icon"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_10"
            android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/assetrepairitem_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_10"
            android:layout_marginTop="@dimen/common_15"
            android:text="桌子腿报修"
            android:textColor="@color/azbx_titlecolor"
            android:textSize="@dimen/textSize_14" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/common_5"
            android:layout_marginRight="@dimen/common_10"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/assetrepairitem_status_img"
                android:layout_width="@dimen/common_15"
                android:layout_height="@dimen/common_15"
                android:src="@mipmap/zcbx_icon_complete"
                />
            <TextView
                android:id="@+id/assetrepairitem_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_10"
                android:text="已申报"
                android:textColor="@color/azbx_titlecolor"
                android:textSize="@dimen/textSize_10"
                />
        </LinearLayout>
    </RelativeLayout>


            <TextView
                android:id="@+id/assetrepairitem_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10"
                android:singleLine="true"
                android:text="桌子的两个腿折断了,请及时来处理"
                android:textColor="@color/zcbx_contentcolor"
                android:textSize="@dimen/textSize_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/common_15"
                    android:layout_height="@dimen/common_15"
                    android:layout_marginLeft="@dimen/common_10"
                    android:src="@mipmap/zcbx_icon_class"></ImageView>

                <TextView
                    android:id="@+id/assetrepairitem_postion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/common_10"
                    android:text="已申报"
                    android:textColor="@color/zcbx_smaltextcolor"
                    android:textSize="@dimen/textSize_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_10"
                android:layout_marginTop="@dimen/common_15"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/common_15"
                    android:layout_height="@dimen/common_15"
                    android:layout_marginLeft="@dimen/common_10"
                    android:src="@mipmap/zcbx_icon_times"></ImageView>

                <TextView
                    android:id="@+id/assetrepairitem_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/common_10"

                    android:text="已申报"
                    android:textColor="@color/zcbx_smaltextcolor"
                    android:textSize="@dimen/textSize_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>