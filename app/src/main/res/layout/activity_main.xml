<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <include
                layout="@layout/common_title_bar"
                />
        <ScrollView
            android:id="@+id/main_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/activity_bg_color"
            >
            <RelativeLayout
                android:id="@+id/mylayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <com.bigkoo.convenientbanner.ConvenientBanner
                    android:id="@+id/main_banner_cb"
                    android:layout_width="match_parent"
                    app:canLoop="true"
                    android:layout_height="180dp" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                >
                <RelativeLayout
                    android:id="@+id/main_calsstabletime_rel"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:layout_marginTop="@dimen/common_15"
                            android:src="@mipmap/home_btn_1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="课程表"
                            android:textColor="#37474f"
                            android:textSize="@dimen/textSize_14"
                            android:paddingBottom="@dimen/common_15"
                            android:gravity="center"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/main_classmsg_rel"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:layout_marginTop="@dimen/common_15"
                            android:src="@mipmap/home_btn_2"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="班级信息"
                            android:textColor="#37474f"
                            android:textSize="@dimen/textSize_14"
                            android:paddingBottom="@dimen/common_15"
                            android:gravity="center"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/main_schoolvoting_rel"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        >

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:layout_marginTop="@dimen/common_15"
                            android:src="@mipmap/home_btn_3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="班级公告"
                            android:textColor="#37474f"
                            android:textSize="@dimen/textSize_14"
                            android:paddingBottom="@dimen/common_15"
                            android:gravity="center"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/main_schoolannoncement_rel"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:layout_marginTop="@dimen/common_15"
                            android:src="@mipmap/home_btn_4"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学生公告"
                            android:textColor="#37474f"
                            android:textSize="@dimen/textSize_14"
                            android:paddingBottom="@dimen/common_15"
                            android:gravity="center"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/common_8"
                android:background="@color/white"
                >

                <RelativeLayout
                    android:id="@+id/main_todayclasstable_rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_10"
                        android:text="当天课程"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textSize_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="@dimen/common_5"
                        android:drawableRight="@mipmap/right_gary"
                        android:gravity="center_vertical"
                        android:padding="@dimen/common_10"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textSize_12" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_10"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/common_10"
                    android:layout_marginBottom="@dimen/common_10"
                    android:orientation="vertical">

                    <com.htcompany.education.studentforgansu.commonpart.views.HorizontalListView
                        android:id="@+id/main_todayclass_lv"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:divider="@color/login_line_bg"
                        android:dividerHeight="@dimen/common_1"
                        android:layout_below="@+id/today_classwait_pb"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <ProgressBar
                        android:id="@+id/today_classwait_pb"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:indeterminateDrawable="@drawable/drawable_progress"
                        android:max="100"
                        android:visibility="gone"></ProgressBar>

                    <TextView
                        android:id="@+id/today_classnotice_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_110"
                        android:gravity="center"
                        android:padding="@dimen/common_10"
                        android:text="暂无课程"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textSize_14"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/login_line_bg"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_120"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    >
                    <ImageView
                        android:id="@+id/main_shcollbook_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:src="@mipmap/home_xyts"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        />
                    <TextView
                        android:layout_width="@dimen/common_0.5"
                        android:layout_height="match_parent"
                        android:background="@color/login_line_bg"
                        />
                    <ImageView
                        android:id="@+id/main_teacherpj_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:src="@mipmap/home_xspkj"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/login_line_bg"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >
                <RelativeLayout
                    android:id="@+id/main_dyxw_rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_10"
                        android:text="校园新闻"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textSize_16"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_10"
                        android:drawableRight="@mipmap/right_gary"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="@dimen/common_5"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textSize_12"
                        android:gravity="center_vertical"
                        />
                </RelativeLayout>
                <com.htcompany.education.studentforgansu.commonpart.views.MyGdListView
                    android:id="@+id/main_tennews_gl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/white"
                    android:layout_marginTop="@dimen/common_10"
                    android:dividerHeight="@dimen/common_10" />
            </LinearLayout>

        </LinearLayout>
            </ScrollView>
        </LinearLayout>
      <LinearLayout
          android:id="@+id/mainmenu_left"
          android:layout_width="300dp"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:background="@color/white"
          android:layout_gravity="start"
          >

      </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>