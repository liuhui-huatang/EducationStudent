<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_120"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/common_130"
            android:layout_height="match_parent"
            android:src="@mipmap/zcbx_bg_deck"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/common_10"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机电自动化一班队"
                android:textColor="@color/azbx_titlecolor"
                android:textSize="@dimen/textSize_14"
                android:singleLine="true"
                android:padding="@dimen/common_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教练：李老师"
                android:textColor="@color/zcbx_smaltextcolor"
                android:textSize="@dimen/textSize_10"
                android:padding="@dimen/common_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我们是最棒的"
                android:drawableLeft="@mipmap/jnds_iocn3"
                android:drawablePadding="@dimen/common_5"
                android:textColor="@color/zcbx_smaltextcolor"
                android:textSize="@dimen/textSize_10"
                android:padding="@dimen/common_10"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>