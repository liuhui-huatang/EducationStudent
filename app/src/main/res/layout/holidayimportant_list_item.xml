<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_16"
            android:padding="@dimen/common_10"
            android:textColor="@color/jqys_lv_textcolor"
            android:text="事件：读海伦凯勒"
            android:drawableLeft="@mipmap/jqysjl_icon_event"
            android:drawablePadding="@dimen/common_5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_14"
            android:textColor="@color/jqys_lv_text2color"
            android:paddingLeft="@dimen/common_25"
            android:paddingRight="@dimen/common_25"
            android:paddingBottom="@dimen/common_10"
            android:text="是写的是一个感人肺腑的事情，我一口气读完了他还差点把他个吃了"
            />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:background="@color/jqys_lv_text3bgcolor"
         >
         <LinearLayout
             android:layout_width="0dp"
             android:layout_weight="1.0"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:gravity="center"
             >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="@dimen/textSize_12"
                 android:padding="@dimen/common_5"
                 android:textColor="@color/jqys_lv_text3color"
                 android:drawablePadding="@dimen/common_5"
                 android:drawableLeft="@mipmap/jqysjl_icon_degree"
                 android:text="2015年第一学期"
                 android:gravity="center"
                 />
         </LinearLayout>

         <LinearLayout
             android:layout_width="0dp"
             android:layout_weight="1.0"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:gravity="center"
             >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="@dimen/textSize_12"
                 android:padding="@dimen/common_5"
                 android:textColor="@color/jqys_lv_text3color"
                 android:drawablePadding="@dimen/common_5"
                 android:drawableLeft="@mipmap/jqysjl_icon_avator"
                 android:text="小明同学"
                 android:gravity="center"
                 />
         </LinearLayout>
     </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/jqys_lv_linecolor"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/jqys_lv_text3bgcolor"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_12"
                    android:padding="@dimen/common_5"
                    android:textColor="@color/jqys_lv_text3color"
                    android:drawablePadding="@dimen/common_5"
                    android:drawableLeft="@mipmap/jqysjl_icon_data"
                    android:text="2015年8月23号"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_12"
                    android:padding="@dimen/common_5"
                    android:textColor="@color/jqys_lv_text3color"
                    android:drawablePadding="@dimen/common_5"
                    android:drawableLeft="@mipmap/jqysjl_icon_location"
                    android:text="家中"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/jqys_lv_linecolor"
            />
    </LinearLayout>
</LinearLayout>