<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/activity_bg_color"
    android:layout_height="match_parent">
   <include
       layout="@layout/common_title_bar"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_10"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学期"
                android:textColor="@color/jqystj_textcolor"
                android:drawableLeft="@mipmap/jqysjl_icon_term"
                android:drawablePadding="@dimen/common_5"
                android:gravity="center_vertical"
                android:padding="@dimen/common_10"
                android:textSize="@dimen/textSize_14" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10"
                android:hint="选择学期"
                android:textColorHint="@color/jqystj_textcolor"
                android:drawableRight="@mipmap/xiajiantou"
                android:drawablePadding="@dimen/common_5"
                android:gravity="right"
                android:textSize="@dimen/textSize_14"
                android:layout_marginRight="@dimen/common_10"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/login_line_bg"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周次"
                android:textColor="@color/jqystj_textcolor"
                android:drawableLeft="@mipmap/jqysjl_icon_time"
                android:drawablePadding="@dimen/common_5"
                android:gravity="center_vertical"
                android:padding="@dimen/common_10"
                android:textSize="@dimen/textSize_14" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10"
                android:hint="选择周次"
                android:textColorHint="@color/jqystj_textcolor"
                android:drawableRight="@mipmap/xiajiantou"
                android:drawablePadding="@dimen/common_5"
                android:gravity="right"
                android:textSize="@dimen/textSize_14"
                android:layout_marginRight="@dimen/common_10"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/login_line_bg"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="事件"
            android:textColor="@color/jqystj_textcolor"
            android:drawableLeft="@mipmap/jqysjl_icon_events"
            android:drawablePadding="@dimen/common_5"
            android:gravity="center_vertical"
            android:padding="@dimen/common_10"
            android:textSize="@dimen/textSize_14" />
        <EditText
            android:layout_width="@dimen/common_150"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_10"
            android:hint="输入事件"
            android:textColorHint="@color/jqystj_textcolor"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textSize="@dimen/textSize_14"
            android:background="#00000000"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/login_line_bg"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点"
            android:textColor="@color/jqystj_textcolor"
            android:drawableLeft="@mipmap/jqysjl_icon_sites"
            android:drawablePadding="@dimen/common_5"
            android:gravity="center_vertical"
            android:padding="@dimen/common_10"
            android:textSize="@dimen/textSize_14" />
        <EditText
            android:layout_width="@dimen/common_150"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_10"
            android:hint="输入地点"
            android:textColorHint="@color/jqystj_textcolor"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textSize="@dimen/textSize_14"
            android:background="#00000000"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/login_line_bg"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当事人"
            android:textColor="@color/jqystj_textcolor"
            android:drawableLeft="@mipmap/jqysjl_icon_avators"
            android:drawablePadding="@dimen/common_5"
            android:gravity="center_vertical"
            android:padding="@dimen/common_10"
            android:textSize="@dimen/textSize_14" />
        <EditText
            android:layout_width="@dimen/common_150"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_10"
            android:hint="输入当事人姓名"
            android:textColorHint="@color/jqystj_textcolor"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textSize="@dimen/textSize_14"
            android:background="#00000000"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/login_line_bg"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内容"
            android:textColor="@color/jqystj_textcolor"
            android:drawableLeft="@mipmap/jqysjl_icon_content"
            android:drawablePadding="@dimen/common_5"
            android:gravity="center_vertical"
            android:padding="@dimen/common_10"
            android:textSize="@dimen/textSize_14" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_10"
            android:layout_alignParentRight="true"
            android:gravity="left|top"
            android:hint="输入内容..."
            android:textSize="@dimen/textSize_14"
            android:background="@drawable/login_shape_editxt"
            android:layout_marginLeft="@dimen/common_10"
            android:layout_marginRight="@dimen/common_10"
            android:lines="5"
            />
    </LinearLayout>
</LinearLayout>