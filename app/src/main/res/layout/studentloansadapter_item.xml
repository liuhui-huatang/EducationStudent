                     android:text="签约日"
                     />
                 <TextView
                     android:id="@+id/studentloans_qytime_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:textSize="@dimen/textSize_14"
                     android:padding="@dimen/common_10"
                     android:textColor="@color/zxdk_tvtel3bgcolor"
                     android:text="2016-5-30"
                     />
             </RelativeLayout>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                 android:background="@color/login_line_bg"
                 android:layout_marginLeft="@dimen/common_40"
                 android:layout_marginRight="@dimen/common_40"
                 />
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/common_30"
                 android:layout_marginRight="@dimen/common_30"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/textSize_14"
                     android:padding="@dimen/common_10"
                     android:textColor="@color/zxdk_tvtelbgcolor"
                     android:drawableLeft="@mipmap/zxdk_icon6"
                     android:drawablePadding="@dimen/common_5"
                     android:gravity="center_vertical"
                     android:text="担保方式"
                     />
                 <TextView
                     android:id="@+id/studentloans_dbr_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:textSize="@dimen/textSize_14"
                     android:padding="@dimen/common_10"
                     android:textColor="@color/zxdk_tvtel3bgcolor"
                     android:text="学校担保"
                     />
             </RelativeLayout>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="2.6"
             android:orientation="vertical"
             >
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginBottom="@dimen/common_30"
                 android:layout_marginLeft="@dimen/common_30"
                 android:layout_marginRight="@dimen/common_30"
                 >
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_centerVertical="true"
                     >
                     <TextView
                         android:id="@+id/studentloans_yqsj_tv"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize="@dimen/textSize_14"
                         android:padding="@dimen/common_10"
                         android:textColor="@color/zxdk_tvtelbgcolor"
                         android:gravity="center_vertical"
                         android:text="已延期 2年"
                         />
                     <TextView
                         android:id="@+id/studentloans_dktime_tv"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize="@dimen/textSize_14"
                         android:paddingLeft="@dimen/common_10"
                         android:paddingBottom="@dimen/common_10"
                         android:textColor="@color/zxdk_tvtelbgcolor"
                         android:text="货款日 2016.2.3"
                         />
