<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:background="@mipmap/zxdk_bg_x"
         >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="7.5"
             android:orientation="vertical"
             >
             <TextView
                 android:id="@+id/studentloans_term_tv"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="2016-2017年第一学期"
                 android:gravity="center"
                 android:padding="@dimen/common_10"
                 android:textSize="@dimen/textSize_16"
                 android:layout_marginTop="@dimen/common_30"
                 android:textColor="@color/zxdk_title2bgcolor"
                 />
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/common_30"
                 android:layout_marginRight="@dimen/common_30"
                 >
                 <TextView
                     android:id="@+id/studentloans_danhao_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/textSize_12"
                     android:padding="@dimen/common_10"
                     android:textColor="@color/jqys_lv_text2color"
                     android:text="货款合同号:102"
                     />
                 <TextView
                     android:id="@+id/studentloans_sqtime_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:textSize="@dimen/textSize_12"
                     android:padding="@dimen/common_10"
                     android:textColor="@color/zxdk_title2bgcolor"
                     android:text="2016.5.6"
                     />
             </RelativeLayout>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                 android:background="@color/login_line_bg"
                 android:layout_marginLeft="@dimen/common_30"
                 android:layout_marginRight="@dimen/common_30"
                 />
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/common_30"
                 android:layout_marginRight="@dimen/common_30"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/textSize_14"
                     android:padding="@dimen/common_10"
                     android:textColor="@color/zxdk_tvtelbgcolor"
                     android:drawableLeft="@mipmap/zxdk_icon1"
                     android:drawablePadding="@dimen/common_5"
                     android:gravity="center_vertical"
                     android:text="获贷总金额"
                     />
                 <TextView
                     android:id="@+id/studentloans_money_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:textSize="@dimen/textSize_14"
                     android:padding="@dimen/common_10"
                     android:textColor="@color/zxdk_tvtel2bgcolor"
                     android:text="5000"
                     />
             </RelativeLayout>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                 android:background="@color/login_line_bg"
                 android:layout_marginLeft="@dimen/common_40"
                 android:layout_marginRight="@dimen/common_40"
                 />
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/common_30"
                 android:layout_marginRight="@dimen/common_30"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/textSize_14"
                     android:padding="@dimen/common_10"
                     android:textColor="@color/zxdk_tvtelbgcolor"
                     android:drawableLeft="@mipmap/zxdk_icon2"
                     android:drawablePadding="@dimen/common_5"
                     android:gravity="center_vertical"
                     android:text="贷款年数"
                     />
                 <TextView
                     android:id="@+id/studentloans_longtime_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:textSize="@dimen/textSize_14"
                     android:padding="@dimen/common_10"
                     android:textColor="@color/zxdk_tvtel3bgcolor"
                     android:text="一年"
                     />
             </RelativeLayout>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                 android:background="@color/login_line_bg"
                 android:layout_marginLeft="@dimen/common_40"
                 android:layout_marginRight="@dimen/common_40"
                 />
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/common_30"
                 android:layout_marginRight="@dimen/common_30"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/textSize_14"
                     android:padding="@dimen/common_10"
                     android:textColor="@color/zxdk_tvtelbgcolor"
                     android:drawableLeft="@mipmap/zxdk_icon3"
                     android:drawablePadding="@dimen/common_5"
                     android:gravity="center_vertical"
                     android:text="借款用途"
                     />
                 <TextView
                     android:id="@+id/studentloans_hfmoney_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:textSize="@dimen/textSize_14"
                     android:padding="@dimen/common_10"
                     android:textColor="@color/zxdk_tvtel3bgcolor"
                     android:text="5000"
                     />
             </RelativeLayout>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                 android:background="@color/login_line_bg"
                 android:layout_marginLeft="@dimen/common_40"
                 android:layout_marginRight="@dimen/common_40"
                 />
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/common_30"
                 android:layout_marginRight="@dimen/common_30"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/textSize_14"
                     android:padding="@dimen/common_10"
                     android:textColor="@color/zxdk_tvtelbgcolor"
                     android:drawableLeft="@mipmap/zxdk_icon4"
                     android:drawablePadding="@dimen/common_5"
                     android:gravity="center_vertical"
                     android:text="借款银行"
                     />
                 <TextView
                     android:id="@+id/studentloans_blank_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:textSize="@dimen/textSize_14"
                     android:padding="@dimen/common_10"
                     android:textColor="@color/zxdk_tvtel3bgcolor"
                     android:text="建设银行"
                     />
             </RelativeLayout>
             <TextView
