<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/common_2"
        app:cardCornerRadius="@dimen/common_10"
        android:layout_marginTop="@dimen/common_10"
        android:layout_marginLeft="@dimen/common_10"
        android:layout_marginRight="@dimen/common_10"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/common_20"
                android:layout_centerVertical="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/myleaveapply_xzb_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="行政班3012"
                        android:textColor="#6c7881"
                        android:textSize="@dimen/textSize_14"
                        android:paddingLeft="@dimen/common_10"
                        android:paddingTop="@dimen/common_18"
                        android:drawableLeft="@mipmap/qj_icon_classesq"
                        android:drawablePadding="@dimen/common_10"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/myleaveapply_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="类型：事假"
                        android:textColor="#6c7881"
                        android:textSize="@dimen/textSize_14"
                        android:layout_marginLeft="@dimen/common_40"
                        android:paddingLeft="@dimen/common_10"
                        android:drawablePadding="@dimen/common_10"
                        android:drawableLeft="@mipmap/qj_icon_type"
                        android:padding="@dimen/common_10"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/myleaveapply_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="时间：2016-16-12 12:00"
                    android:textColor="#6c7881"
                    android:paddingTop="@dimen/common_18"
                    android:textSize="@dimen/textSize_12"
                    android:paddingLeft="@dimen/common_10"
                    android:drawableLeft="@mipmap/qj_icon_timeqj"
                    android:drawablePadding="@dimen/common_10"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/common_10"
                android:layout_height="@dimen/common_15"
                android:src="@mipmap/qj_icon_text"
                android:scaleType="fitXY"
                android:layout_marginLeft="32dp"
                android:visibility="visible"
                android:layout_marginTop="@dimen/common_18"
                />
            <TextView
                android:id="@+id/myleaveapply_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="事由：dddddddddddddddddddddddddddddddddddddddddddd"
                android:textColor="#a2a0a0"
                android:textSize="@dimen/textSize_14"
                android:paddingLeft="@dimen/common_10"
                android:layout_marginTop="18dp"
                android:paddingBottom="@dimen/common_18"

                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/login_line_bg"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/myleaveapply_status_img"
                android:layout_width="@dimen/common_15"
                android:layout_height="@dimen/common_15"
                android:src="@mipmap/qj_togguo"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/myleaveapply_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请通过"
                android:textColor="@color/qj_btncolor"
                android:textSize="@dimen/textSize_12"
                android:padding="@dimen/common_10"
                />
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>