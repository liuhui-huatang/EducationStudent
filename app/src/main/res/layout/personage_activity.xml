<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    >
    <include
        layout="@layout/common_title_bar"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/common_20"
            >
            <LinearLayout
                android:id="@+id/personage_jbxx_ll"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/common_100"
                    android:layout_height="@dimen/common_100"
                    android:src="@mipmap/xs_gerzy_icon1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基本信息"
                    android:textSize="@dimen/textSize_14"
                    android:padding="@dimen/common_10"
                    android:textColor="@color/mainfuction_color"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/personage_wdcj_ll"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/common_100"
                    android:layout_height="@dimen/common_100"
                    android:src="@mipmap/xs_gerzy_icon2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的成绩"
                    android:textSize="@dimen/textSize_14"
                    android:padding="@dimen/common_10"
                    android:textColor="@color/mainfuction_color"
                    />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/common_20"
        >
        <LinearLayout
            android:id="@+id/personage_tzxx_ll"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/common_100"
                android:layout_height="@dimen/common_100"
                android:src="@mipmap/xs_gerzy_icon3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体质信息"
                android:textSize="@dimen/textSize_14"
                android:padding="@dimen/common_10"
                android:textColor="@color/mainfuction_color"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/personage_wdxxk_ll"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/common_100"
                android:layout_height="@dimen/common_100"
                android:src="@mipmap/xs_gerzy_icon4"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的选修课"
                android:textSize="@dimen/textSize_14"
                android:padding="@dimen/common_10"
                android:textColor="@color/mainfuction_color"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>