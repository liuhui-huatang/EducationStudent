<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginRight="@dimen/common_10"
    android:layout_marginTop="@dimen/common_10"
    android:layout_marginLeft="@dimen/common_10"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mxf_titlebgcolor"
        >
        <TextView
            android:id="@+id/tuitionwaiver_term_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_10"
            android:text="2015-2016年第一学期"
            android:gravity="center_vertical"
            android:textSize="@dimen/textSize_14"
            android:textColor="@color/mxf_titlecolor"
            />
        <TextView
            android:id="@+id/tuitionwaiver_money_tv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_10"
            android:text="-3000"
            android:gravity="center_vertical"
            android:textSize="@dimen/textSize_14"
            android:textColor="@color/mxf_title5color"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/common_10"
            android:paddingLeft="@dimen/common_10"
            android:text="免学费始发日期"
            android:gravity="center_vertical"
            android:textSize="@dimen/textSize_12"
            android:textColor="@color/mxf_title2color"
            android:drawableLeft="@mipmap/qj_icon_ty_green"
            android:drawablePadding="@dimen/common_5"
            />
        <TextView
            android:id="@+id/tuitionwaiver_starttime_tv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/common_10"
            android:paddingRight="@dimen/common_10"
            android:text="2016.03.02"
            android:gravity="center_vertical"
            android:textSize="@dimen/textSize_12"
            android:textColor="@color/mxf_title3color"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_10"
            android:text="免学费始发日期"
            android:gravity="center_vertical"
            android:textSize="@dimen/textSize_12"
            android:textColor="@color/mxf_title2color"
            android:drawableLeft="@mipmap/qj_icon_ty_red"
            android:drawablePadding="@dimen/common_5"
            />
        <TextView
            android:id="@+id/tuitionwaiver_endtime_tv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_10"
            android:text="2016.03.02"
            android:gravity="center_vertical"
            android:textSize="@dimen/textSize_12"
            android:textColor="@color/mxf_title3color"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/login_line_bg"
        />
    <TextView
        android:id="@+id/tuitionwaiver_remark_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_10"
        android:layout_marginLeft="@dimen/common_15"
        android:layout_marginRight="@dimen/common_15"
        android:text="因为学习好所以给你才让免得学费，继续努力，以后还能免，学校是你的家"
        android:gravity="center_vertical"
        android:textSize="@dimen/textSize_12"
        android:textColor="@color/mxf_title4color"
        />
</LinearLayout>
</LinearLayout>