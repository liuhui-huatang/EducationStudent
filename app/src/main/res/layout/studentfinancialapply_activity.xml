<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    >
    <include
        layout="@layout/common_title_bar"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/mydk_shape_editxt"
                android:layout_margin="@dimen/common_20"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mydk_waitsh_shape"
                    android:layout_margin="1dp"
                    >
                    <ImageView
                        android:layout_width="@dimen/common_20"
                        android:layout_height="@dimen/common_20"
                        android:src="@mipmap/zxj_icon1"
                        android:layout_margin="@dimen/common_10"
                        android:scaleType="fitXY"
                        />
                </RelativeLayout>
                <EditText
                    android:id="@+id/financialapply_name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/common_10"
                    android:layout_margin="@dimen/common_1"
                    android:hint="申请理由名称"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:background="#00000000"
                    android:textSize="@dimen/textSize_14"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/mydk_shape_editxt"
                android:layout_marginLeft="@dimen/common_20"
                android:layout_marginRight="@dimen/common_20"
                android:visibility="gone"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mydk_waitsh_shape"
                    android:layout_margin="1dp"
                    >
                    <ImageView
                        android:layout_width="@dimen/common_20"
                        android:layout_height="@dimen/common_20"
                        android:src="@mipmap/zxj_icon2"
                        android:layout_margin="@dimen/common_10"
                        android:scaleType="fitXY"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/financialapply_term_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/common_10"
                    android:layout_margin="@dimen/common_1"
                    android:hint="选择学期"
                    android:drawableRight="@mipmap/right_gary"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:textSize="@dimen/textSize_14"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/mydk_shape_editxt"
                android:layout_marginLeft="@dimen/common_20"
                android:layout_marginRight="@dimen/common_20"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mydk_waitsh_shape"
                    android:layout_margin="1dp"
                    >
                    <ImageView
                        android:layout_width="@dimen/common_20"
                        android:layout_height="@dimen/common_20"
                        android:src="@mipmap/zxj_icon3"
                        android:layout_margin="@dimen/common_10"
                        android:scaleType="fitXY"
                        />
                </RelativeLayout>
                <EditText
                    android:id="@+id/financialapply_monety_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/common_10"
                    android:layout_margin="@dimen/common_1"
                    android:hint="助学金额"
                    android:inputType="number"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:textSize="@dimen/textSize_14"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/mydk_shape_editxt"
                android:layout_marginLeft="@dimen/common_20"
                android:layout_marginRight="@dimen/common_20"
                android:visibility="gone"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mydk_waitsh_shape"
                    android:layout_margin="1dp"
                    >
                    <ImageView
                        android:layout_width="@dimen/common_20"
                        android:layout_height="@dimen/common_20"
                        android:src="@mipmap/zxj_icon4"
                        android:layout_margin="@dimen/common_10"
                        android:scaleType="fitXY"
                        />
                </RelativeLayout>
                <EditText
                    android:id="@+id/financialapply_zknum_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/common_10"
                    android:layout_margin="@dimen/common_1"
                    android:hint="中考报名号"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:textSize="@dimen/textSize_14"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/mydk_shape_editxt"
                android:layout_marginTop="@dimen/common_20"
                android:layout_marginLeft="@dimen/common_20"
                android:layout_marginRight="@dimen/common_20"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mydk_waitsh_shape"
                    android:layout_margin="1dp"
                    >
                    <ImageView
                        android:layout_width="@dimen/common_20"
                        android:layout_height="@dimen/common_20"
                        android:src="@mipmap/zxj_icon5"
                        android:layout_margin="@dimen/common_10"
                        android:scaleType="fitXY"
                        />
                </RelativeLayout>
                <EditText
                    android:id="@+id/financialapply_starttime_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/common_10"
                    android:layout_margin="@dimen/common_1"
                    android:hint="输入年份"
                    android:inputType="number"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:textSize="@dimen/textSize_14"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/mydk_shape_editxt"
                android:layout_marginLeft="@dimen/common_20"
                android:layout_marginRight="@dimen/common_20"
                android:layout_marginTop="@dimen/common_20"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mydk_waitsh_shape"
                    android:layout_margin="1dp"
                    >
                    <ImageView
                        android:layout_width="@dimen/common_20"
                        android:layout_height="@dimen/common_20"
                        android:src="@mipmap/zxj_icon6"
                        android:layout_margin="@dimen/common_10"
                        android:scaleType="fitXY"
                        />
                </RelativeLayout>
                <EditText
                    android:id="@+id/financialapply_endtime_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/common_10"
                    android:layout_margin="@dimen/common_1"
                    android:hint="输入月份"
                    android:inputType="number"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:textSize="@dimen/textSize_14"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/mydk_shape_editxt"
                android:layout_marginTop="@dimen/common_20"
                android:layout_marginLeft="@dimen/common_20"
                android:layout_marginRight="@dimen/common_20"
                android:visibility="gone"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mydk_waitsh_shape"
                    android:layout_margin="1dp"
                    >
                    <ImageView
                        android:layout_width="@dimen/common_20"
                        android:layout_height="@dimen/common_20"
                        android:src="@mipmap/zxj_7"
                        android:layout_margin="@dimen/common_10"
                        android:scaleType="fitXY"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/financialapply_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/common_10"
                    android:layout_margin="@dimen/common_1"
                    android:hint="选择助学金类型"
                    android:drawableRight="@mipmap/right_gary"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:textSize="@dimen/textSize_14"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/common_20"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common_10"
                    android:text="申请理由描述"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textSize_14"
                    android:textColor="@color/title_bar_color"
                    />
                <EditText
                    android:id="@+id/financialapply_remark_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/common_10"
                    android:hint="输入申请理由"
                    android:background="@drawable/mydk_shape_editxt"
                    android:textSize="@dimen/textSize_14"
                    android:lines="3"
                    android:gravity="top|left"
                    />
            </LinearLayout>
        </LinearLayout></ScrollView>
</LinearLayout>