<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    >
    <include
        layout="@layout/common_title_bar"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/cdetail_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="php工程师"
                android:textColor="#292929"
                android:textSize="@dimen/textSize_18"
                android:padding="@dimen/common_10"
                />
            <TextView
                android:id="@+id/cdetail_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="6k-8k"
                android:textColor="#ff4c65"
                android:textSize="@dimen/textSize_14"
                android:padding="@dimen/common_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/cdetail_cname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="不知道什么科技公司"
                android:textColor="#303030"
                android:textSize="@dimen/textSize_16"
                android:paddingLeft="@dimen/common_10"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/common_10"
            >
            <TextView
                android:id="@+id/cdetail_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="石家庄"
                android:textColor="#5f5f5f"
                android:textSize="@dimen/textSize_12"
                android:padding="@dimen/common_10"
                android:drawableLeft="@mipmap/qyxq_icon1"
                android:drawablePadding="@dimen/common_5"
                />
            <TextView
                android:id="@+id/cdetail_xl_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中专"
                android:textColor="#5f5f5f"
                android:drawableLeft="@mipmap/qyxq_icon2"
                android:drawablePadding="@dimen/common_5"
                android:textSize="@dimen/textSize_12"
                android:paddingLeft="@dimen/common_20"
                />
            <TextView
                android:id="@+id/cdetail_bmrs_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10人"
                android:textColor="#5f5f5f"
                android:drawableLeft="@mipmap/qyxq_icon3"
                android:drawablePadding="@dimen/common_5"
                android:textSize="@dimen/textSize_12"
                android:paddingLeft="@dimen/common_20"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/cdetail_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2016.30.5-2017.12.30"
            android:textColor="#5f5f5f"
            android:layout_marginTop="@dimen/common_5"
            android:textSize="@dimen/textSize_12"
            android:paddingLeft="@dimen/common_10"
            android:drawableLeft="@mipmap/qyxq_icon4"
            android:drawablePadding="@dimen/common_5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_0.5"
            android:background="@color/login_line_bg"
            android:layout_marginTop="@dimen/common_10"
            />
        <TextView
            android:id="@+id/cdetail_adress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="石家庄海悦天地F座710室"
            android:textColor="#5f5f5f"
            android:textSize="@dimen/textSize_12"
            android:padding="@dimen/common_10"
            android:drawableLeft="@mipmap/qyxq_icon8"
            android:drawablePadding="@dimen/common_5"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_15"
        android:background="@color/activity_bg_color"
        android:layout_marginTop="@dimen/common_10"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/common_10"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="职位描述"
            android:textColor="#333333"
            android:textSize="@dimen/textSize_18"
            android:padding="@dimen/common_10"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_0.5"
            android:background="@color/login_line_bg"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="岗位职责："
            android:textColor="#6a6a6a"
            android:textSize="@dimen/textSize_14"
            android:padding="@dimen/common_10"
            />
        <TextView
            android:id="@+id/cdetail_gwms_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.良好的代码习惯，要求结构清晰，阿打算发命名规范，逻辑性强，代码沉余量少"
            android:textColor="#6a6a6a"
            android:textSize="@dimen/textSize_12"
            android:padding="@dimen/common_10"
            />
        <Button
            android:id="@+id/cdetail_bm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/qyxq_icon6"
            android:text="报名"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/common_10"
            android:textSize="@dimen/textSize_18"
            />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>