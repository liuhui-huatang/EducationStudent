<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/common_10"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/studentfinancial_jxmc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="科技创新奖(2012566)"
                android:textColor="@color/jxj_titlecolor"
                android:textSize="@dimen/textSize_14"
                android:padding="@dimen/common_10"
                />
            <TextView
                android:id="@+id/studentfinancial_stauts_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已录入"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_12"
                android:layout_alignParentRight="true"
                android:padding="@dimen/common_5"
                android:background="@color/jxj_bgcolor"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_10"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/login_line_bg"
            android:layout_marginLeft="@dimen/common_10"
            android:layout_marginRight="@dimen/common_10"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="助学金额"
                android:textColor="@color/jxj_smallcolor"
                android:textSize="@dimen/textSize_12"
                android:padding="@dimen/common_10"
                />
            <TextView
                android:id="@+id/studentfinancial_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="国家助学金"
                android:textColor="@color/jxj_titlecolor"
                android:textSize="@dimen/textSize_14"
                android:padding="@dimen/common_10"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/login_line_bg"
            android:layout_marginLeft="@dimen/common_10"
            android:layout_marginRight="@dimen/common_10"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="年份"
                android:textColor="@color/jxj_smallcolor"
                android:textSize="@dimen/textSize_12"
                android:padding="@dimen/common_10"
                />
            <TextView
                android:id="@+id/studentfinancial_year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="国家助学金"
                android:textColor="@color/jxj_titlecolor"
                android:textSize="@dimen/textSize_14"
                android:padding="@dimen/common_10"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/login_line_bg"
            android:layout_marginLeft="@dimen/common_10"
            android:layout_marginRight="@dimen/common_10"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="月份"
                android:textColor="@color/jxj_smallcolor"
                android:textSize="@dimen/textSize_12"
                android:padding="@dimen/common_10"
                />
            <TextView
                android:id="@+id/studentfinancial_month_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2000元"
                android:textColor="@color/jxj_titlecolor"
                android:textSize="@dimen/textSize_14"
                android:padding="@dimen/common_10"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/login_line_bg"
            android:layout_marginLeft="@dimen/common_10"
            android:layout_marginRight="@dimen/common_10"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="申请理由"
                android:textColor="@color/jxj_smallcolor"
                android:textSize="@dimen/textSize_12"
                android:padding="@dimen/common_10"
                />
            <TextView
                android:id="@+id/studentfinancial_remark_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="学习不好"
                android:textColor="@color/jxj_titlecolor"
                android:textSize="@dimen/textSize_12"
                android:padding="@dimen/common_10"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>