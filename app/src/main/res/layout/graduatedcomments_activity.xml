<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <include
        layout="@layout/common_title_bar"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/bypy"
        android:layout_margin="@dimen/common_20"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/graduated_sname_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="小明同学："
            android:textColor="@color/black2"
            android:textSize="@dimen/textSize_18"
            android:padding="@dimen/common_10"
            android:layout_marginTop="@dimen/common_10"
            android:layout_marginLeft="@dimen/common_15"
            />
        <TextView
            android:id="@+id/graduated_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_20"
            android:text="该生诚实守信，为人"
            android:textColor="@color/black2"
            android:textSize="@dimen/textSize_14"
            android:padding="@dimen/common_10"
            android:gravity="center"
            />
            <TextView
                android:id="@+id/graduated_teachername_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点评人：李老师"
                android:textColor="@color/black2"
                android:textSize="@dimen/textSize_14"
                android:padding="@dimen/common_20"
                android:layout_margin="@dimen/common_20"
                android:gravity="right"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>