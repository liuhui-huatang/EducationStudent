<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_view_item"
            android:layout_marginLeft="@dimen/common_10"
            android:layout_marginRight="@dimen/common_10"
            android:layout_marginTop="@dimen/common_130"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rewards_shape"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_50"
                    android:layout_marginLeft="@dimen/common_15"
                    android:layout_marginRight="@dimen/common_15"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="奖励金额"
                        android:textColor="@color/class_jljl_zkwzcolor"
                        android:drawableLeft="@mipmap/djzk_icon_sum00"
                        android:drawablePadding="@dimen/common_5"
                        android:textSize="@dimen/textSize_16" />
                    <TextView
                        android:id="@+id/rewards_jlje_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="500元"
                        android:textColor="@color/class_jljl_zkwzcolor"
                        android:textSize="@dimen/textSize_16" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_10"
                    android:layout_marginLeft="@dimen/common_15"
                    android:layout_marginRight="@dimen/common_15"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="奖励文号"
                        android:textColor="@color/class_jljl_zkwzcolor"
                        android:drawableLeft="@mipmap/djzk_icon_num"
                        android:drawablePadding="@dimen/common_5"
                        android:textSize="@dimen/textSize_16" />
                    <TextView
                        android:id="@+id/rewards_jlwh_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="464315813215"
                        android:textColor="@color/class_jljl_zkwzcolor"
                        android:textSize="@dimen/textSize_16" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_10"
                    android:layout_marginLeft="@dimen/common_15"
                    android:layout_marginRight="@dimen/common_15"
                    android:layout_marginBottom="@dimen/common_10"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="颁奖单位"
                        android:textColor="@color/class_jljl_zkwzcolor"
                        android:drawableLeft="@mipmap/djzk_icon_com"
                        android:drawablePadding="@dimen/common_5"
                        android:textSize="@dimen/textSize_16" />
                    <TextView
                        android:id="@+id/rewards_bjdw_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="书法协会"
                        android:textColor="@color/class_jljl_zkwzcolor"
                        android:textSize="@dimen/textSize_16" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="@dimen/common_20"
                android:layout_marginRight="@dimen/common_20"
                android:background="@drawable/rewards_border_shape"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_120"
                    >
                    <ImageView
                        android:id="@+id/rewards_item_img"
                         android:layout_width="@dimen/common_100"
                        android:layout_height="@dimen/common_100"
                        android:src="@mipmap/dj_icon_trophy_01"
                        android:layout_margin="@dimen/common_10"
                        android:layout_centerVertical="true"
                        />
                    <LinearLayout
                        android:layout_toRightOf="@id/rewards_item_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/common_40"
                        >
                        <TextView
                            android:id="@+id/rewards_name_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:padding="@dimen/common_10"
                            android:text="书法大赛一等奖"
                            android:textColor="@color/class_jljl_titlecolor"
                            android:textSize="@dimen/textSize_16" />
                        <TextView
                            android:id="@+id/rewards_time_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="2016年10月27日"
                            android:textColor="@color/class_jljl_datecolor"
                            android:textSize="@dimen/textSize_12" />
                        <TextView
                            android:id="@+id/rewards_jb_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="总决赛"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/common_5"
                            android:singleLine="true"
                            android:drawableLeft="@mipmap/dj_icon_collect_01"
                            android:padding="@dimen/common_10"
                            android:textColor="@color/class_jljl_djcolor"
                            android:textSize="@dimen/textSize_12" />
                        <TextView
                            android:id="@+id/rewards_dj_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="一等奖"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/common_5"
                            android:drawableLeft="@mipmap/dj_icon_trophy_04"
                            android:textColor="@color/class_jljl_djcolor"
                            android:textSize="@dimen/textSize_12" />
                    </LinearLayout>
                </RelativeLayout>

                <CheckBox
                    android:id="@+id/huodexiangqing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:drawableRight="@mipmap/xia"
                    android:drawablePadding="@dimen/common_10"
                    android:gravity="center"
                    android:padding="@dimen/common_10"
                    android:text="获奖详情"
                    android:textColor="@color/class_jljl_titlecolor"
                    android:button="@null"
                    android:textSize="@dimen/textSize_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_above="@id/huodexiangqing"
                    android:background="@color/login_line_bg" />
            </RelativeLayout>
    </RelativeLayout>
</LinearLayout>