<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/common_10"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/hardshipgrants_term_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="生活费(2012566)"
                android:textColor="@color/jxj_titlecolor"
                android:textSize="@dimen/textSize_14"
                android:padding="@dimen/common_10"
                />
            <TextView
                android:id="@+id/hardshipgrants_status_tv"
                android:layout_toRightOf="@id/hardshipgrants_term_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已录入"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_12"
                android:padding="@dimen/common_2"
                android:background="@color/jxj_bgcolor"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/hardshipgrants_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/jxj_smallcolor"
                android:textSize="@dimen/textSize_10"
                android:padding="@dimen/common_10"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/login_line_bg"
            android:layout_marginLeft="@dimen/common_10"
            android:layout_marginRight="@dimen/common_10"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="补助申请日期"
                android:textColor="@color/jxj_smallcolor"
                android:textSize="@dimen/textSize_12"
                android:padding="@dimen/common_10"
                />
            <TextView
                android:id="@+id/hardshipgrants_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2016-12-07"
                android:textColor="@color/jxj_titlecolor"
                android:textSize="@dimen/textSize_14"
                android:padding="@dimen/common_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="补助金额"
                android:textColor="@color/jxj_smallcolor"
                android:textSize="@dimen/textSize_12"
                android:padding="@dimen/common_10"
                />
            <TextView
                android:id="@+id/hardshipgrants_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2000元"
                android:textColor="@color/jxj_titlecolor"
                android:textSize="@dimen/textSize_14"
                android:padding="@dimen/common_10"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="申请原因"
                android:textColor="@color/jxj_smallcolor"
                android:textSize="@dimen/textSize_12"
                android:padding="@dimen/common_10"
                />
            <TextView
                android:id="@+id/hardshipgrants_remark_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="由于贫困所以申请，期望批准，大恩不言谢"
                android:textColor="@color/jxj_titlecolor"
                android:textSize="@dimen/textSize_12"
                android:paddingLeft="@dimen/common_10"
                android:paddingRight="@dimen/common_10"
                android:paddingBottom="@dimen/common_10"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>