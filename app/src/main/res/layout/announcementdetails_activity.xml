<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    >
    <include
        layout="@layout/common_title_bar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/announcementdetails_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/common_15"
            android:textColor="@color/xytp_titlecolor"
            android:textSize="@dimen/textSize_22" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/announcementdetails_fbtime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_15"
                android:textColor="@color/xytp_xq_color"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_10"
                android:text="â€¢"
                android:textColor="@color/xytp_xq_color"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/announcementdetails_fbperson_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/common_10"
                android:textColor="@color/title_bar_color"
                android:textSize="@dimen/textSize_14" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:layout_margin="@dimen/common_10"
            android:background="@color/login_line_bg" />

        <WebView
            android:id="@+id/announcementdetails_fbcontent_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_15"
            android:layout_marginRight="@dimen/common_15"
            android:background="@color/white" />
    </LinearLayout>
</LinearLayout>